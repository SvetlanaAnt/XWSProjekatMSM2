<jxb:bindings version="2.0"
              xmlns:jxb="http://java.sun.com/xml/ns/jaxb"
              xmlns:xs="http://www.w3.org/2001/XMLSchema"
              jxb:extensionBindingPrefixes="xjc">
    <jxb:globalBindings mapSimpleTypeDef="false" choiceContentProperty="true">
        <jxb:javaType name="java.lang.Double" xmlType="xs:double"
                      parseMethod="agent.app.converter.TypeConverter.parseDouble"
                      printMethod="agent.app.converter.TypeConverter.printDouble"/>
        <jxb:javaType name="java.lang.Float" xmlType="xs:float"
                      parseMethod="agent.app.converter.TypeConverter.parseFloat"
                      printMethod="agent.app.converter.TypeConverter.printFloat"/>
        <jxb:javaType name="java.lang.Long" xmlType="xs:long"
                      parseMethod="agent.app.converter.TypeConverter.parseLong"
                      printMethod="agent.app.converter.TypeConverter.printLong"/>
        <jxb:javaType name="java.lang.Integer" xmlType="xs:int"
                      parseMethod="agent.app.converter.TypeConverter.parseInteger"
                      printMethod="agent.app.converter.TypeConverter.printInteger"/>
        <jxb:javaType name="java.lang.Boolean" xmlType="xs:boolean"
                      parseMethod="agent.app.converter.TypeConverter.parseBoolean"
                      printMethod="agent.app.converter.TypeConverter.printBoolean"/>
        <jxb:javaType name="org.joda.time.DateTime" xmlType="xs:dateTime"
                      parseMethod="agent.app.converter.TypeConverter.parseDate"
                      printMethod="agent.app.converter.TypeConverter.printDate"/>
    </jxb:globalBindings>
</jxb:bindings>